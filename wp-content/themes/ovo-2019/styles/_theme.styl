
&
  // background: linear-gradient(90deg, $color 0%, $highlight 100%)
  // height: 100%

body
  standard-voice()
  color: rgba($black, 0.8)

// sort out for global
.home-link
  display: block
  overflow: hidden
  width: 100% // $todo - sort this out...

button
  background: none
  border: 0
  margin: 0
  padding: 0


.tax
  h2
    calm-voice()
  p
    margin-top: $pad
    em
      font-style: italic
  .x
    margin-top: $pad*2

.xx
  //
  border: 1px solid alpha($color, .4)
  .half
    border: 1px solid alpha($highlight, .4)
  &.centered
    text-align: center
  &.aligned-left
    h2
      // color: $highlight
      font-weight: 600
  p + p
    margin-top: $pad
  h2 + p
    margin-top: $pad


.project-header + .basic-diptych,
.project-header + .image-fill,
.image-fill + .basic-diptych
  margin-top: $pad*4

.t
  calm-voice()

.project-overview
  border: 1px solid alpha($highlight, .5)
  .left, .right
    border: 1px solid alpha($color, .5)
    padding: $pad
  .half
    border: 1px solid alpha($alternate, .5)
  .heading
    calm-voice()
  @media $break-point-0-2
    .box
      // border: 1px solid red
      width: 90%
      max-width: 400px
      margin: 0 auto
      padding: $pad
      transform: translate( 0, -($pad*4))
      background: $white
  @media $break-point-2
    flex-row()
    flex-wrap: wrap
    .half
      flex-column()
      justify-content: center
      flex-basis: 50%

    .box
      background: $color
      padding: $pad
    
.landing-list
  //
  @media $break-point-2
    // border: 2px solid green
    .project
      &:nth-of-type(2n + 2)
        // border: 1px solid red
        .project-overview
          flex-direction: row-reverse


p
  em
    font-style: italic


.module-title
  display: block
  position: absolute
  padding: $pad*.25 $pad
  monospace()
  color: $color
  background: $black
  border-radius: $pad*.25
  opacity: .8
  font-size: 12px

