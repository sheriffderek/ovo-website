body
  standard-voice()
  color: rgba($black, 0.8)

// sort out for global
.home-link
  display: block
  overflow: hidden
  width: 100% // $todo - sort this out...

button
  background: none
  border: 0
  margin: 0
  padding: 0


.tax
  h2
    calm-voice()
  p
    margin-top: $pad
    em
      font-style: italic
  .x
    margin-top: $pad*2

.xx
  //
  border: 1px solid alpha($color, .4)
  .half
    border: 1px solid alpha($highlight, .4)
  &.centered
    text-align: center
  &.aligned-left
    h2
      // color: $highlight
      font-weight: 600
  p + p
    margin-top: $pad
  h2 + p
    margin-top: $pad


.project-header + .basic-diptych,
.project-header + .image-fill,
.image-fill + .basic-diptych
  margin-top: $pad*4

.t
  calm-voice()

.project-overview
  border: 1px solid alpha($highlight, .5)
  .left, .right
    border: 1px solid alpha($color, .5)
    padding: $pad
  @media $break-point-2
    flex-row()
    flex-wrap: wrap
    a
      flex-basis: 100%
      text-decoration: underline
    .left, .right
      flex-basis: 50%

p
  em
    font-style: italic
