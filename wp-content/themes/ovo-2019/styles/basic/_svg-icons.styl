
block-size($width, $height = $width) // should be just size... or element-size...
  width: $width
  height: $height

// base icons styles (fontastic.me)
[class^="icon-"], [class*=" icon-"], .svg-icon
  display: inline-block
  fill: currentColor

$standard-icon-size = 25px
.svg-icon
  block-size($standard-icon-size)

// icon patterns
$extra-small-icon-size = 12px
extra-small-icons()
  .svg-icon
    block-size($extra-small-icon-size)

$small-icon-size = 18px
small-icons()
  .svg-icon
    block-size($small-icon-size)

standard-icons()
  .svg-icon
    block-size($standard-icon-size)
